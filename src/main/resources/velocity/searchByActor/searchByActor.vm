#parse("/velocity/layout.vm")
#@mainLayout()
<head>
    <link rel="stylesheet" href="/searchByActor.css">
</head>

<body class = "body">

    <h1>Search results for: "${query}"</h1>
    <div id = "container">
        #foreach( $show in ${shows} )
            <div class = "resultbox">
                <h2>${show.getShowTitle()}</h2>
                #if ($show.isMovie())
                    <h3>Movie</h3>
                #end
                #if ($show.isMovie())
                    <h2>Series</h2>
                #end
                <h3>Genre: ${show.getGenre()}</h3>
                <h3>Year: ${show.getYear()}</h3>
                <hr>
                <h3>Synopsis</h3>
                <p>${show.getSynopsis()}</p>
                <br>
            </div>
        #end
    </div>

</body>

#end