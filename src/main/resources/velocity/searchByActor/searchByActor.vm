#parse("/velocity/layout.vm")
#@mainLayout()
<head>
    <link rel="stylesheet" href="/searchByActor.css">
</head>

<body class = "body">
    <h3>Search results for: "${query}"</h3>
    <div id = "container">
        #foreach( $show in ${shows} )
            <div class = "resultbox">
                <a href = "/show/?show=${show.getShowID()}">${show.getShowTitle()}</a><br>
                ${show.getYear()} | ${show.getGenre()}
                <p>${show.getSynopsis()}</p>
            </div>
        #end
    </div>
</body>
#end